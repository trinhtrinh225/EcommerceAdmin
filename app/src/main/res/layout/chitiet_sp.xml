<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcolor_left">
<!--hdahd-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:background="@drawable/bgcolor_right">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/back_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Chi Tiết Sản Phẩm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgDetail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#66C1F8"
        android:adjustViewBounds="true"
        android:src="@drawable/phone_image"  />

    <LinearLayout
        android:layout_below="@+id/imgDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bgcolor_left">
        <TextView
            android:id="@+id/discountPriceD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittest"
            android:padding="5dp"
            android:textSize="10sp"
            android:text="10% OFF"
            android:paddingEnd="5dp"
            android:textColor="#3C8E03"
            android:paddingRight="5dp" />
        <TextView
            android:id="@+id/productNameD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Ten San Pham"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/productPriceD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Gia san pham"
            android:textColor="#000" />
        <TextView
            android:id="@+id/productDescriptionD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mo ta san pham"
            android:textColor="#000" />

        <TextView
            android:id="@+id/productCategoryD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Danh muc san pham"
            android:textColor="#000" />

        <TextView
            android:id="@+id/productQuantityD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Danh muc san pham"
            android:textColor="#000" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnDeleteD"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Xóa"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_xoa_sp"/>

            <Button
                android:id="@+id/btnUpdateD"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Cập Nhật"
                android:textStyle="bold"
                android:background="@drawable/dangnhap"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>